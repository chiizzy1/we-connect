<%- include('partials/header') -%>
<div class="container">

      <div class="profile-grid">
        <div class="user-profile">
          <div class="avatar">
            <div class="w-24 rounded">
              <img src="https://placeimg.com/192/192/people" />
            </div>
          </div>
          <div class="details">
            <p><strong>User Name</strong>: <%= user.userName %></p>
            <p><strong>Email</strong>: <%= user.email %></p>
            <a href="/edit/<%= user.id %>" class="btn btn-primary">Edit Profile</a>
          </div>
        </div>

        <form action="/post/createPost" enctype="multipart/form-data" method="POST" class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
          <div class="card-body">
            <div class="form-control">
              <label for="title" class="form-label">Type here!</label>
              <input type="text" placeholder="Type here" id="title" name="title" class="input input-bordered input-md w-full max-w-xs" />
            </div>
            <div class="form-control">
              <label class="label">
                <span class="label-text">Type here!</span>
              </label>
              <textarea class="textarea textarea-bordered" id="caption" name="caption"></textarea>
            </div>
            <div class="form-control mt-6">
              <button class="btn btn-primary">Post</button>
            </div>
          </div>
        </form>
      </div>

      <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <a href="/post/<%= posts[i]._id%>">
            <img class="mask mask-squircle" src="<%= posts[i].image%>">
          </a>
        </li>
      <% } %>
      
      <a class="btn btn-primary" href="/feed">Return to Feed</a>

  </div>
<%- include('partials/footer') -%>



